{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/types/.d.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    // TODO REMOVE IT LATER
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    // END OF REMOVE IT LATER
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}